<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@color/color_FAD2C2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_update_store" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCrossPlay"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_cross_c" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:gravity="center"
            android:text="Hi!! There"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_16sdp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:gravity="center"
            android:text="For more features &amp; a better\nuser experience, please\nupgrade this app."
            android:textColor="@color/color_black"
            android:textSize="@dimen/_15sdp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayUpdate"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:backgroundTint="@color/color_6C1B03"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_13sdp"
            app:cornerRadius="@dimen/_40sdp"
            app:rippleColor="@color/colorLightBlue" />

    </LinearLayout>
</androidx.cardview.widget.CardView>


