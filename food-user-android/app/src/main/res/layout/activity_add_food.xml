<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:orientation="vertical">


    <include
        android:id="@+id/includeHeader"
        layout="@layout/include_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_food_item" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Item Name"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFoodName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/bg_red_rect_21dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:hint="Enter Item Name"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_808080"
                android:textSize="@dimen/_11sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_food_price" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Price"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFoodPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/bg_red_rect_21dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:hint="Enter Price"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="200"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_808080"
                android:textSize="@dimen/_11sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_food_aq" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Available Quantity"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFoodAQ"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/bg_red_rect_21dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:hint="Enter Available Quantity"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_808080"
                android:textSize="@dimen/_11sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_food_aq" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Add Food Image"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@font/sf_pro_display_regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp">

                <LinearLayout
                    android:id="@+id/linearAddPhoto"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_add_photo"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:gravity="center"
                        android:src="@drawable/ic_food_image"
                        android:tint="@color/color_E1D0CB" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/adapter_photo" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/sf_pro_display_semi_bold"
                android:padding="@dimen/_10sdp"
                android:text="Add Food"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_40sdp"
                app:rippleColor="@color/colorLightBlue" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
